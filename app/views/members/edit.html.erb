<div class="container">
  <h4>EDIT <%= @member.name %></h4>
  <%= form_with model: @member, local:true do |f| %>
    名前<%= f.text_field :name, class: "form-control" %>
    自己紹介<%= f.text_field :introduction, class: "form-control" %>
    画像<%= f.attachment_field :profile_image, class: "form-control" %>
    instagram ID<%= f.text_field :instagram, class: "form-control" %>
    <%= f.submit "Edit", class: "btn btn-success" %>
  <% end %>
  <%= link_to "<<BACK", members_path, class: "text-dark" %>
</div>